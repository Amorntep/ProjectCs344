@model IEnumerable<SON.Models.orders>

@{
    ViewBag.Title = "Showbays";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Showbays</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            วันที่สั่งซื้อ
        </th>
        <th>
            สถานะการชำระเงิน
        </th>
        <th>
            ประเภทของสินค้า
        </th>
        <th>
            ชื่อสินค้า
        </th>
        <th>
            ที่อยู่
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @if (item.status.Equals("1")) {
            <a href="#">ชำระเรียบร้อย</a>
            }
            else
            {
                <a href="#">จัดส่งเรียบร้อย</a>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customers.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.products.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customers.Address)
        </td>
        <td>
            @Html.ActionLink("จัดส่ง", "SendMember", new { id = item.OrderID }) 
        </td>
    </tr>
}

</table>
